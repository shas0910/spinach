<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.room_name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to "退出する", "#" %>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <%= render partial: 'content', collection: @contents %>
  </div>
</div>

<%= form_with model: [@room, @content], class: 'form', local: true do |f| %>
  <div class="radio-buttons">
    <label><%= f.radio_button :content_type, "report" %>報告</label>
    <label><%= f.radio_button :content_type, "communicate" %>連絡</label>
    <label><%= f.radio_button :content_type, "consult" %>相談</label>
  </div>
  <div class="form-input">
    <%= f.text_field :content_title %>
    <%= f.text_field :content_text, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%# <%= f.file_field :image, class: 'hidden' %> %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>